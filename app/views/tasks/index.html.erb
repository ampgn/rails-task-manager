<h1>My Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li style="list-style: none">
  <input type='checkbox'>
  <%=link_to task.title, task_path(task)%>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %></li>
</ul>

<%= link_to "Add a new task", new_task_path %>

